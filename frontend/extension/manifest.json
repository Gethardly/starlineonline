{
  "manifest_version": 3,
  "name": "Starline Side Panel (dev)",
  "version": "1.0",
  "description": "Вставляет боковую панель на starline-online.ru",
  "permissions": [
    "scripting",
    "activeTab",
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://starline-online.ru/*",
    "http://localhost:5173/*",
    "*://*.starline.online/*",
    "http://localhost:3000/*",
    "https://vosst.qit.kg/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://starline-online.ru/*"
      ],
      "js": [
        "content_prod.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "assets/*",
        "inject.js",
        "build/*",
        "build/assets"
      ],
      "matches": [
        "https://starline-online.ru/*"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:5173; object-src 'self';"
  }
}