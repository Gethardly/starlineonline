// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String?
  role      Role       @default(user)
  positions Position[] @relation("UsersOnPositions")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum Role {
  user
  admin
}

model Position {
  id             Int             @id @default(autoincrement())
  x              Float
  y              Float
  name           String
  address        String
  contacts       String
  description    String
  note           String?
  positionNumber Int
  users          User[]          @relation("UsersOnPositions")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  deviceHistory  DeviceHistory[]
}

model Device {
  id        Int      @id @default(autoincrement())
  deviceId  String   @unique
  imei      String?
  alias     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  history DeviceHistory[]
}

model DeviceHistory {
  id         Int       @id @default(autoincrement())
  deviceId   String
  positionId Int
  arrivedAt  DateTime?
  leftAt     DateTime?
  note       String?
  createdBy  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  device   Device   @relation(fields: [deviceId], references: [deviceId], onDelete: Cascade)
  position Position @relation(fields: [positionId], references: [id], onDelete: Cascade)

  @@index([deviceId, arrivedAt])
  @@index([positionId, arrivedAt])
  @@index([arrivedAt])
}
